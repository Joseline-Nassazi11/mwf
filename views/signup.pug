doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF - Sign Up
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='css/signup.css')
.signup-card
  h3.text-center.mb-4 MWF Sign Up
  form#signupForm(action='/register' method='post' novalidate)
    .mb-3
      label Full Name
      input.form-control(type='text' name='fullName' required='')
    .mb-3
      label Email Address
      input.form-control(type='email' name='email' required='')
    .mb-3
      label Password
      input.form-control(type='password' name='password' required='')
    .mb-3
      label Confirm Password
      input.form-control(type='password' name='confirmPassword' required='')
    .mb-3
      label Role
      select.form-select(name='role' required='')
        option(value='') Select role
        option(value='Manager') Manager
        option(value='Attendants') Attendants 
        option(value='Warehouse') Warehouse
        option(value='Loading') Loading
    button.btn.btn-success.w-100 Register
  p.text-muted.text-center.mt-3 &copy; 2025 Mayondo Wood &amp; Furniture Ltd
  
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
script(src='js/signup.js')
