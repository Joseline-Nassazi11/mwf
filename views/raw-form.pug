doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Add Raw Material - MWF
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/forms.css")

  body
    .container.mt-5
      .card.shadow.p-4
        h3.mb-4.text-primary Add Raw Material

        form(action="/stock/add-raw" method="POST")
          .mb-3
            label.form-label(for="productName") Material Name
            input#productName.form-control(type="text" name="productName" placeholder="Timber, Poles, etc." required)

          .mb-3
            label.form-label(for="productType") Material Type
            select#productType.form-select(name="productType" required)
              option(value="") -- Select Type --
              option(value="Timber") Timber
              option(value="Poles") Poles
              option(value="Softwood") Softwood
              option(value="Hardwood") Hardwood

          .mb-3
            label.form-label(for="supplier") Supplier
            input#supplier.form-control(type="text" name="supplier" placeholder="Supplier Name")

          .mb-3
            label.form-label(for="quantity") Quantity
            input#quantity.form-control(type="number" name="quantity" value="0" min="0")

          .mb-3
            label.form-label(for="costPrice") Cost Price (UGX)
            input#costPrice.form-control(type="number" name="costPrice" placeholder="0")

          .mb-3
            label.form-label(for="sellingPrice") Selling Price (UGX)
            input#sellingPrice.form-control(type="number" name="sellingPrice" placeholder="0")

          .mb-3
            label.form-label(for="quality") Quality
            select#quality.form-select(name="quality")
              option(value="Grade A") Grade A
              option(value="Grade B") Grade B
              option(value="Grade C") Grade C

          input(type="hidden" name="category" value="raw")   

          .mb-3
            label.form-label(for="lastUpdated") Date
            input#lastUpdated.form-control(type="date" name="lastUpdated")

          .text-end
            button.btn.btn-success(type="submit") Save Material
            a.btn.btn-secondary(href="/stocklist") Cancel
