doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF - Stock Management
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet")
  link(rel='stylesheet' href='/css/stock-manage.css')

// Navbar
.navbar-custom.d-flex.justify-content-between.align-items-center
  .d-flex.align-items-center
    img(src='/images/mwf-logo.png' alt='MWF Logo' class='logo')  
  span Mayondo Wood &amp; Furniture Ltd
  span.user-role Manager

// Main Content
.content
  h2.mb-4 Stock Management

  // Add / Update Stock Form
  .card.mb-4.p-3
    h4 Add / Update Product
    form.row.g-3(action='/stock' method='POST')
      .col-md-6
        label.form-label(for='name') Product Name
        input#name.form-control(type='text' name='name' placeholder='Hardwood Chair' required='')
      .col-md-6
        label.form-label(for='type') Type
        input#type.form-control(type='text' name='type' placeholder='Furniture, Wood')
      .col-md-6
        label.form-label(for='supplier') Supplier
        input#supplier.form-control(type='text' name='supplier' placeholder='Supplier Name')
      .col-md-6
        label.form-label(for='quantity') Quantity
        input#quantity.form-control(type='number' name='quantity' value='0' min='0')
      .col-md-6
        label.form-label(for='cost') Cost Price (UGX)
        input#cost.form-control(type='number' name='cost' placeholder='0')
      .col-md-6
        label.form-label(for='price') Selling Price (UGX)
        input#price.form-control(type='number' name='price' placeholder='0')
      .col-md-6
        label.form-label(for='quality') Quality
        select#quality.form-control(name='quality' required)
          option(value='' selected)
          option(value='Grade A') Grade A
          option(value='Grade B') Grade B
          option(value='Grade C') Grade C
      .col-md-6
        label.form-label(for='lastUpdate') Date
        input#lastUpdate.form-control(type='date' name='lastUpdate')
      .col-12.text-end
        button.btn.btn-success(type='submit')
          i.bi.bi-save-fill.me-2
          | Save Product
        button.btn.btn-secondary(type='reset')
          i.bi.bi-arrow-counterclockwise.me-2
          | Clear



