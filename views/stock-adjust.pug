doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Adjust Stock - MWF
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet", href="/css/forms.css")

  body
    // Navbar
    .navbar-custom.d-flex.align-items-center.p-3.shadow-sm
      img(src="/images/mwf-logo.png" alt="MWF Logo" class="logo me-2")
      span.fw-bold.fs-5.text-success Mayondo Wood & Furniture Ltd

    // Main content
    .container.mt-5
      .card.shadow.p-4
        h3.mb-4.text-warning Adjust Stock

        form(action=`/stock/adjust/${item._id}` method="POST")
          .row.mb-3
            label.col-sm-3.col-form-label Current Quantity
            .col-sm-9
              input.form-control(type="number" value=item.quantity readonly)

          .row.mb-3
            label.col-sm-3.col-form-label(for="adjustment") Adjustment
            .col-sm-9
              input#adjustment.form-control(type="number" name="adjustment" placeholder="e.g. +5 or -3" required)

          .row.mb-3
            label.col-sm-3.col-form-label(for="lastUpdate") Date
            .col-sm-9
              input#lastUpdate.form-control(type="date" name="lastUpdate" value=item.lastUpdate.toISOString().slice(0,10) required)

          .text-end
            button.btn.btn-warning(type="submit") Apply Adjustment
            a.btn.btn-secondary.ms-2(href="/stocklist") Cancel
