doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} | Mayondo Wood & Furniture Ltd
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/main.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

  body
    // Navbar (shared across all pages)
    nav.navbar.navbar-expand-lg.navbar-dark.bg-success.shadow-sm
      .container-fluid
        a.navbar-brand(href="/dashboard")
          img(src="/images/mwf-logo.png" alt="Logo" height="40" class="d-inline-block align-text-top me-2")
          | Mayondo Wood & Furniture Ltd
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/dashboard") Dashboard
            li.nav-item
              a.nav-link(href="/stocklist") Stock
            li.nav-item
              a.nav-link(href="/sales") Sales
            li.nav-item
              a.nav-link(href="/orders") Orders
            li.nav-item
              a.nav-link(href="/expenses") Expenses
            li.nav-item
              a.nav-link(href="/reports") Reports
    // Page-specific content
    block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
